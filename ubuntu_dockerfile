#
# Ubuntu Dockerfile
#
# https://github.com/dockerfile/ubuntu
#

# Pull base image.
FROM ubuntu:14.04

# Install.
RUN \
  sed -i 's/# \(.*multiverse$\)/\1/g' /etc/apt/sources.list && \
  apt-get update && \
  apt-get -y upgrade && \
  apt-get install -y build-essential && \
  apt-get install -y software-properties-common && \
  apt-get install -y openssh-server apache2 nano byobu curl git htop man unzip vim wget && \
  apt-get install -y --no-install-recommends dialog && \
  apt-get update && \
  apt-get install -y --no-install-recommends openssh-server && \
  rm -rf /var/lib/apt/lists/*

RUN mkdir /var/www/collab
RUN mkdir /root/.ssh
WORKDIR /var/www/collab

EXPOSE 22
EXPOSE 443 2222

# Add files.
COPY /root/.ssh/id_rsa.pub /root/authorized_keys
RUN chmod 700 /root/.ssh
RUN chmod 400 /root/.ssh/authorized_keys
RUN chown root. /root/.ssh/authorized_keys
CMD /usr/sbin/sshd -D

#Resume Databse
COPY /var/www/collab/resume.sql /var/www/collab/resume.sql

# Set environment variables.
ENV HOME /root

# Define default command.
CMD ["bash"]
